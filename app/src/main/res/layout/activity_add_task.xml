<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AddTaskActivity">

    <ImageView
        android:id="@+id/add_task_back_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Add Task"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/circular_std_book"
        app:layout_constraintBottom_toBottomOf="@+id/add_task_back_image"
        app:layout_constraintStart_toEndOf="@+id/add_task_back_image"
        app:layout_constraintTop_toTopOf="@+id/add_task_back_image" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_back_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:text="Label"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:fontFamily="@font/circular_std_book" />

            <EditText
                android:id="@+id/add_task_label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/circular_std_book"
                android:hint="Enter label here"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="24dp"
                android:text="Description"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:fontFamily="@font/circular_std_book" />

            <EditText
                android:id="@+id/add_task_desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:backgroundTint="@color/colorAccent"
                android:ems="10"
                android:fontFamily="@font/circular_std_book"
                android:hint="Enter description here"
                android:inputType="textMultiLine"
                android:text=""
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="24dp"
                android:text="Date"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:fontFamily="@font/circular_std_book" />

            <TextView
                android:id="@+id/add_task_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:text="Click to choose a date"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:fontFamily="@font/circular_std_book" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="24dp"
                android:text="Time"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:fontFamily="@font/circular_std_book" />

            <TextView
                android:id="@+id/add_task_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:text="Click to choose a time"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:fontFamily="@font/circular_std_book" />

            <Button
                android:id="@+id/add_task_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_bg"
                android:elevation="2dp"
                android:fontFamily="@font/circular_std_book"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>